# keybind : emacs
bindkey -e

# auto-complete
autoload -Uz compinit
compinit

# after Tab-completion, you can switch selection by 'Tab' 
zstyle ':completion:*:default' menu select=1

zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'
zstyle ':completion:*:sudo:*' command-path /usr/local/sbin /usr/local/bin /usr/sbin /usr/bin /sbin /bin /usr/X11R6/bin
zstyle ':completion:*:processes' command 'ps x -o pid,s,args'

# color
autoload -Uz colors
colors

if [[ -n "$SSH_CONNECTION" ]]; then
    PROMPT="%B%F{cyan}%n@%m:%F{blue} %d%f%b
    %(!.#.$) "
fi

PROMPT="%B%n@%m:%F{blue} %d%f%b
%(!.#.$) "
PROMPT2="%{$fg[green]%}%_> %{$reset_color%}"
SPROMPT="%{$fg[red]%}correct: %R -> %r [nyae]? %{$reset_color%}"
# RPROMPT="%{$fg[cyan]%}[%d]%{$reset_color%}"

# history
HISTFILE=~/.zsh_history
HISTSIZE=100000
SAVEHIST=100000

# if no command then 'cd' to command-name directory
setopt auto_cd

# 'cd + <Tab>' shows the history of 'cd' 
setopt auto_pushd

# no dubble when 'pushd' 
setopt pushd_ignore_dups

# glob : wild-card
setopt extended_glob

setopt share_history
setopt hist_reduce_blanks
setopt hist_ignore_all_dups

# alias
alias ll='ls -l --color'
alias ls='ls -F --color=auto'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias sudo='sudo '
alias grep='grep --color'
alias sudoedit='sudo -e'
alias emacs='emacs -rv'

# export
export CLICOLOR=1
export EDITOR=emacs

xmodmap $HOME/.Xmodmap 

source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

